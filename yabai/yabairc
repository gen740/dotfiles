sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config                             \
    window_opacity              off         \
    active_window_opacity       1.0         \
    normal_window_opacity       0.8         \
    window_shadow               off         \
    window_border               off         \
    window_placement            first_child \
    top_padding                 0           \
    bottom_padding              0           \
    left_padding                0           \
    right_padding               0           \
    active_window_border_color  0xffffA500  \
    normal_window_border_color  0xff444444  \
    focus_follows_mouse         off   \
    auto_balance                on          \
    layout                      float

yabai -m space 1        \
    --label main        \
    --layout float

yabai -m space 2        \
    --label browser     \
    --layout bsp

yabai -m space 3        \
    --label sms         \
    --layout bsp

yabai -m space 4        \
    --label free        \
    --layout float

yabai -m space 5        \
    --label todo        \
    --layout bsp

# vim:ft=bash
