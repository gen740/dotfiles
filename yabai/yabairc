sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config                             \
    window_opacity              off         \
    active_window_opacity       1.0         \
    normal_window_opacity       1.0         \
    window_shadow               off         \
    window_placement            first_child \
    top_padding                 0           \
    bottom_padding              0           \
    left_padding                0           \
    right_padding               0           \
    focus_follows_mouse         off         \
    auto_balance                on          \
    layout                      float

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^システム設定$" manage=off
yabai -m rule --add app="^ミュージック$" manage=off
yabai -m rule --add app="^写真$" manage=off
yabai -m rule --add app="^Photos$" manage=off
yabai -m rule --add app="^ChatGPT$" manage=off
yabai -m rule --add app="^GitHub$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Minecraft$" manage=off
yabai -m rule --add app="^Minecraft Launcher$" manage=off
yabai -m rule --add app="^Chrome$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Karabiner-EventViewer$" manage=off
yabai -m rule --add app="^Karabiner-Elements Setting$" manage=off
yabai -m rule --add app="^Vampire Survivors$" manage=off
yabai -m rule --add app="^Steam$" manage=off
yabai -m rule --add app="^Font Book$" manage=off

