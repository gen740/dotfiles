[user]
	name = gen740
	email = gen740.f@gmail.com

[http]
	sslVerify = false
	postBuffer = 100M

[push]
	default = simple
	recurseSubmodules = check

[core]
	editor = nvim
	quotepath = false
	compression = 0
	commentChar = "#"

[alias]
	ap = add -pA
	subup = submodule update --init --recursive
	pl = log --graph --oneline --decorate --all --date=short --pretty='format:%C(bold magenta)%h%C(reset) - %C(green)%ad%C(reset)%C(auto)%d%C(reset) %C(ul brightmagenta)%s%C(reset) %C(yellow)@%an%C(reset)'
	ps = status --short --untracked-files=all

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff]
	tool = nvimdiff

[merge]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""

[mergetool "nvimdiff"]
	cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
	keepBackup = false

[safe]
	directory = /opt/homebrew

[help]
	autocorrect = 20

[commit]
	verbose = true

; vim:ft=gitconfig noet
